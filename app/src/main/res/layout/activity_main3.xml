<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/beijing3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:fontFamily="monospace"
        android:text="白马·气象站"
        android:gravity="center"
        android:background="@drawable/selector2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_refresh3"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:src="@drawable/refresh"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/tv_title3"
        android:layout_marginLeft="35dp"
        android:background="@drawable/selector3"/>

    <TextView
        android:id="@+id/tv_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明日天气："
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="56dp"/>

    <TextView
        android:id="@+id/tv_cond_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tv_tomorrow"/>

    <TextView
        android:id="@+id/tv_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26℃"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tv_cond_txt"/>

    <TextView
        android:id="@+id/tv_pcpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0mm"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tv_tmp"/>

    <LinearLayout
        android:id="@+id/LL_display3"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:layout_above="@id/LL_footbar3"
        android:orientation="vertical">

        <!--第一行数据-->

        <LinearLayout
            android:id="@+id/LL_firstline3"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="空气温度"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_tmp_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="28℃"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="30dp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="80dip"
                android:background="@android:color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="相对湿度"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_hum_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="60%"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@android:color/white">
        </View>

        <!--第二行数据-->

        <LinearLayout
            android:id="@+id/LL_secondline"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="降雨量"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_rain_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="10mm"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="80dip"
                android:background="@android:color/white">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="风速"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_ws_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="3m/s"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@android:color/white"
            >
        </View>

        <!--第三行数据-->

        <LinearLayout
            android:id="@+id/LL_thirdline"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="风向"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_wd_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="90°"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="80dip"
                android:background="@android:color/white">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="辐射强度"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_ra_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="500W/㎡"
                    android:gravity="end"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_footbar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/activity_foolbar"></include>
    </LinearLayout>

</RelativeLayout>